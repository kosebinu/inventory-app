<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/style.css" rel="stylesheet">
    <title>Categories</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-5">Categories</h1>
        <div class="row">
            <% categories.forEach(category => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><%= category.name %></h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted"><%= category.description || 'No description available' %></p>
                            <form action="/categories/<%= category.id %>/delete" method="POST">
                                <div class="mb-3">
                                    <label for="adminPassword<%= category.id %>" class="form-label">Admin Password</label>
                                    <input type="password" id="adminPassword<%= category.id %>" name="adminPassword" class="form-control" placeholder="Enter admin password" required>
                                </div>
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                            </form>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <small>Items: <%= category.Items.length %></small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
